@model DataVisualizationUI.Dtos.UpdateCategoryDto

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Info  -->
<div class="mb-8 pl-1">
    <h1 class="text-3xl font-bold text-white">Kategori Düzenle</h1>
    <p class="text-gray-400 mt-1 text-sm">Kategoriyi bu ekrandan düzenleyebiliriniz.</p>
</div>

<!-- Form Card -->
<div class="bg-dark-800 rounded-xl border border-dark-700 shadow-xl p-8 max-w-2xl mx-auto">

    <form asp-controller="Category" asp-action="UpdateCategory" method="post">
        <input type="hidden" asp-for="CategoryId" />
        
        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="mb-4 p-4 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 text-sm"></div>
        
        <!-- Category Name Input -->
        <div class="mb-6">
            <label asp-for="CategoryName" class="block text-sm font-medium text-gray-400 mb-2"></label>
            <div class="relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                    <i class="fa-solid fa-tag"></i>
                </span>
                <input type="text" asp-for="CategoryName" class="w-full bg-dark-900 border border-dark-700 rounded-lg pl-10 pr-4 py-3 text-white placeholder-gray-600 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all" placeholder="Örn: Elektronik, Giyim..." />
            </div>
            <span asp-validation-for="CategoryName" class="text-red-400 text-xs mt-1 block"></span>
            <p class="text-xs text-gray-500 mt-2">Kategori adı benzersiz ve anlaşılır olmalıdır.</p>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center gap-4 mt-8 border-t border-dark-700 pt-6">
            <button type="submit" class="bg-primary hover:bg-indigo-600 text-white font-medium py-2.5 px-6 rounded-lg shadow-lg shadow-indigo-500/30 transform active:scale-95 transition-all flex items-center gap-2">
                <i class="fa-solid fa-check"></i> Güncelle
            </button>
            <a href="/Category/CategoryList" class="text-gray-400 hover:text-white hover:bg-dark-700 font-medium py-2.5 px-6 rounded-lg transition-colors">
                İptal
            </a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
