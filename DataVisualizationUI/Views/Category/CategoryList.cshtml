@model List<DataVisualizationUI.Dtos.CategoryDto>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Info -->
<div class="mb-8 flex justify-between items-center pt-16 md:pt-0">
    <div>
        <h1 class="text-3xl font-bold text-white">Kategoriler</h1>
        <p class="text-gray-400 mt-1 text-sm">Tüm kategorileri buradan yönetebilirsiniz.</p>
    </div>
    <a href="/Category/CreateCategory" class="bg-primary hover:bg-indigo-600 text-white font-medium py-2 px-4 rounded-lg shadow-lg shadow-indigo-500/30 transition-all flex items-center gap-2">
        <i class="fa-solid fa-plus"></i> <span class="hidden sm:inline">Yeni Kategori Ekle</span>
    </a>
</div>

<!-- Search Bar -->
<div class="mb-6">
    <form method="get" action="/Category/CategoryList" class="flex gap-3">
        <div class="relative flex-1 max-w-md">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                <i class="fa-solid fa-search"></i>
            </span>
            <input type="text" name="search" value="@ViewBag.Search" 
                   class="w-full bg-dark-800 border border-dark-700 rounded-lg pl-10 pr-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all" 
                   placeholder="Kategori ara..." />
        </div>
        <button type="submit" class="bg-primary hover:bg-indigo-600 text-white font-medium py-2.5 px-5 rounded-lg transition-all flex items-center gap-2">
            <i class="fa-solid fa-search"></i> Ara
        </button>
        @if(!string.IsNullOrEmpty(ViewBag.Search as string))
        {
            <a href="/Category/CategoryList" class="bg-dark-700 hover:bg-dark-600 text-gray-300 hover:text-white font-medium py-2.5 px-5 rounded-lg transition-all flex items-center gap-2">
                <i class="fa-solid fa-times"></i> Temizle
            </a>
        }
    </form>
</div>

<!-- Table Section  -->
<div class="bg-dark-800 rounded-xl border border-dark-700 shadow-xl overflow-hidden">
@if (Model is not null && Model.Any())
{
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-dark-900 text-gray-400 uppercase text-xs">
                    <th class="py-4 px-6 font-semibold border-b border-dark-700 w-20">#</th>
                    <th class="py-4 px-6 font-semibold border-b border-dark-700">Kategori Adı</th>
                    <th class="py-4 px-6 font-semibold border-b border-dark-700 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-dark-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-dark-700/50 transition-colors group">
                        <td class="py-4 px-6 text-gray-500 text-sm font-mono">@item.CategoryId</td>
                        <td class="py-4 px-6">
                            <span class="font-medium text-gray-200 group-hover:text-white transition-colors">@item.CategoryName</span>
                        </td>
                        <td class="py-4 px-6 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/Category/UpdateCategory/@item.CategoryId" class="p-2 rounded-lg text-blue-400 hover:bg-blue-500/10 hover:text-blue-300 transition-colors" title="Düzenle">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="/Category/DeleteCategory/@item.CategoryId" class="p-2 rounded-lg text-red-400 hover:bg-red-500/10 hover:text-red-300 transition-colors" title="Sil">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-12">
        <div class="bg-dark-700/50 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <i class="fa-solid fa-folder-open text-2xl text-gray-500"></i>
        </div>
        <h3 class="text-lg font-medium text-white">Hiç kategori bulunamadı</h3>
        <p class="text-gray-500 mt-1 text-sm">Yeni bir kategori ekleyerek başlayın.</p>
    </div>
}
</div>
