@using System.Globalization
@model DataVisualizationUI.Models.PagedViewModel<DataVisualizationUI.Dtos.ReviewListDto>

@{
    ViewData["Title"] = "Ürün Değerlendirmeleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Section -->
<div class="mb-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
    <div>
        <h1 class="text-3xl font-bold text-white flex items-center gap-3">
             <span class="text-primary truncate max-w-md">@ViewBag.ProductName</span> <span class="text-gray-400 font-normal">Değerlendirmeleri</span>
        </h1>
        <p class="text-gray-400 mt-1 text-sm">Bu ürüne ait müşteri geri bildirimlerini inceliyorsunuz.</p>
    </div>
    <a href="/Product/ProductList" class="bg-dark-700 hover:bg-dark-600 text-gray-300 hover:text-white font-medium py-2 px-4 rounded-lg transition-all flex items-center gap-2">
        <i class="fa-solid fa-arrow-left"></i> <span class="hidden sm:inline">Ürün Listesine Dön</span>
    </a>
</div>

<!-- Table Section -->
<div class="bg-dark-800 rounded-xl border border-dark-700 shadow-xl overflow-hidden flex flex-col justify-between" style="min-height: 600px;">
    @if (Model.Items is not null && Model.Items.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-dark-900 text-gray-400 uppercase text-xs">
                         <th class="py-4 px-6 font-semibold border-b border-dark-700 w-20">#</th>
                        <th class="py-4 px-6 font-semibold border-b border-dark-700">Müşteri</th>
                        <th class="py-4 px-6 font-semibold border-b border-dark-700 w-32">Puan</th>
                        <th class="py-4 px-6 font-semibold border-b border-dark-700">Yorum</th>
                        <th class="py-4 px-6 font-semibold border-b border-dark-700 w-32 text-center">Tarih</th>
                        <th class="py-4 px-6 font-semibold border-b border-dark-700 w-32 text-center">Duygu</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-dark-700">
                    @foreach (var item in Model.Items)
                    {
                        <tr class="hover:bg-dark-700/50 transition-colors group">
                             <td class="py-4 px-6 text-gray-500 text-sm font-mono">@item.ReviewId</td>
                            <td class="py-4 px-6">
                                 <div class="flex items-center gap-2">
                                    <div class="w-8 h-8 rounded-full bg-dark-600 flex items-center justify-center text-xs text-gray-400 border border-dark-500">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <span class="text-sm text-gray-300 font-medium">
                                        @(string.IsNullOrEmpty(item.CustomerName) ? "Misafir" : item.CustomerName)
                                    </span>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex text-yellow-500 text-sm gap-0.5">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Rating)
                                        {
                                            <i class="fa-solid fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="fa-regular fa-star text-gray-600"></i>
                                        }
                                    }
                                </div>
                            </td>
                             <td class="py-4 px-6">
                                <p class="text-sm text-gray-300 italic">
                                    "@item.ReviewText"
                                </p>
                            </td>
                            <td class="py-4 px-6 text-center">
                                <span class="text-xs text-gray-400 block font-medium">@item.ReviewDate.ToString("d MMM yyyy", CultureInfo.GetCultureInfo("tr-TR"))</span>
                                <span class="text-[10px] text-gray-600">@item.ReviewDate.ToString("HH:mm")</span>
                            </td>
                             <td class="py-4 px-6 text-center">
                                 @if(item.Sentiment == "Olumlu")
                                {
                                     <span class="px-2 py-1 rounded-full text-xs font-bold bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 shadow-sm shadow-emerald-900/20">
                                        <i class="fa-solid fa-face-smile mr-1"></i> Olumlu
                                    </span>
                                }
                                else if(item.Sentiment == "Olumsuz")
                                {
                                    <span class="px-2 py-1 rounded-full text-xs font-bold bg-red-500/10 text-red-400 border border-red-500/20 shadow-sm shadow-red-900/20">
                                        <i class="fa-solid fa-face-frown mr-1"></i> Olumsuz
                                    </span>
                                }
                                else
                                {
                                     <span class="px-2 py-1 rounded-full text-xs font-bold bg-gray-500/10 text-gray-400 border border-gray-500/20 shadow-sm shadow-gray-900/20">
                                        <i class="fa-solid fa-face-meh mr-1"></i> Nötr
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <div class="px-6 py-4 border-t border-dark-700 flex items-center justify-between bg-dark-900/50">
            <div class="text-sm text-gray-500">
                Toplam <span class="font-medium text-white">@Model.TotalItems</span> yorumdan <span class="font-medium text-white">@((Model.PageNumber - 1) * Model.PageSize + 1)</span> - <span class="font-medium text-white">@(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems))</span> arası gösteriliyor.
            </div>
            <div class="flex items-center gap-2">
                
                <!-- First Page -->
                @if (Model.PageNumber > 1)
                {
                    <a href="/Product/ReviewOfProductList?id=@ViewBag.ProductId&page=1" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium">
                        <i class="fa-solid fa-angles-left"></i>
                    </a>
                }
                else
                {
                     <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                        <i class="fa-solid fa-angles-left"></i>
                    </span>
                }

                <!-- Previous -->
                @if (Model.HasPreviousPage)
                {
                    <a href="/Product/ReviewOfProductList?id=@ViewBag.ProductId&page=@(Model.PageNumber - 1)" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium">
                        <i class="fa-solid fa-chevron-left"></i>
                    </a>
                }
                else
                {
                     <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                        <i class="fa-solid fa-chevron-left"></i>
                    </span>
                }

                <!-- Page Numbers -->
                <div class="flex items-center gap-1 mx-2">
                    @{
                        int startPage = Math.Max(1, Model.PageNumber - 2);
                        int endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);

                        if (startPage > 1)
                        {
                            <a href="/Product/ReviewOfProductList?id=@ViewBag.ProductId&page=1" class="w-8 h-8 flex items-center justify-center rounded-lg bg-dark-700 text-gray-400 hover:bg-dark-600 hover:text-white transition-colors text-sm">1</a>
                            if (startPage > 2)
                            {
                                <span class="w-8 h-8 flex items-center justify-center text-gray-500">...</span>
                            }
                        }

                        for (int i = startPage; i <= endPage; i++)
                        {
                             if (i == Model.PageNumber)
                            {
                                <span class="w-8 h-8 flex items-center justify-center rounded-lg bg-primary text-white text-sm font-bold">@i</span>
                            }
                            else
                            {
                                <a href="/Product/ReviewOfProductList?id=@ViewBag.ProductId&page=@i" class="w-8 h-8 flex items-center justify-center rounded-lg bg-dark-700 text-gray-400 hover:bg-dark-600 hover:text-white transition-colors text-sm">@i</a>
                            }
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <span class="w-8 h-8 flex items-center justify-center text-gray-500">...</span>
                            }
                            <a href="/Product/ReviewOfProductList?id=@ViewBag.ProductId&page=@Model.TotalPages" class="w-8 h-8 flex items-center justify-center rounded-lg bg-dark-700 text-gray-400 hover:bg-dark-600 hover:text-white transition-colors text-sm">@Model.TotalPages</a>
                        }
                    }
                </div>

                <!-- Next -->
                @if (Model.HasNextPage)
                {
                    <a href="/Product/ReviewOfProductList?id=@ViewBag.ProductId&page=@(Model.PageNumber + 1)" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium">
                        <i class="fa-solid fa-chevron-right"></i>
                    </a>
                }
                else
                {
                     <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                        <i class="fa-solid fa-chevron-right"></i>
                    </span>
                }

                <!-- Last Page -->
                @if (Model.PageNumber < Model.TotalPages)
                {
                    <a href="/Product/ReviewOfProductList?id=@ViewBag.ProductId&page=@Model.TotalPages" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium">
                        <i class="fa-solid fa-angles-right"></i>
                    </a>
                }
                else
                {
                     <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                        <i class="fa-solid fa-angles-right"></i>
                    </span>
                }
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <div class="bg-dark-700/50 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <i class="fa-regular fa-comment-dots text-2xl text-gray-500"></i>
            </div>
            <h3 class="text-lg font-medium text-white">Değerlendirme Yok</h3>
            <p class="text-gray-500 mt-1 text-sm">Bu ürün için henüz bir geri bildirim yapılmamış.</p>
        </div>
    }
</div>
