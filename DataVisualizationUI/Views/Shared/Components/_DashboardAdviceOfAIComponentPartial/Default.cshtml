@{
    var aiAdvice = ViewBag.AIAdvice as string ?? "Yükleniyor...";
    var hasError = ViewBag.HasError ?? false;
}

<!-- AI Dashboard Advice Card (Yapay Zeka Dashboard Tavsiye Kartı) -->
<div class="bg-gradient-to-br from-indigo-900/40 via-purple-900/40 to-pink-900/40 rounded-xl border border-indigo-500/30 shadow-2xl shadow-indigo-500/20 overflow-hidden">
    <!-- Header with AI Icon (Yapay Zeka İkonlu Üst Bilgi) -->
    <div class="px-6 py-4 border-b border-indigo-500/20 bg-gradient-to-r from-indigo-600/20 to-purple-600/20">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center shadow-lg">
                <i class="fa-solid fa-brain text-white text-lg"></i>
            </div>
            <div>
                <h3 class="text-lg font-bold text-white flex items-center gap-2">
                    AI Tavsiyeleri
                </h3>
                <p class="text-xs text-gray-400">Powered by AI Analytics</p>
            </div>
        </div>
    </div>

    <!-- AI Advice Content (Yapay Zeka Tavsiye İçeriği) -->
    <div class="p-6">
        @if (hasError)
        {
            <div class="flex items-start gap-3 p-4 rounded-lg bg-red-500/10 border border-red-500/20">
                <i class="fa-solid fa-exclamation-triangle text-red-400 text-lg mt-0.5"></i>
                <div>
                    <p class="text-red-300 text-sm leading-relaxed">@aiAdvice</p>
                </div>
            </div>
        }
        else
        {
            <div class="relative">
                <!-- Decorative Quote Icon (Dekoratif Alıntı İkonu) -->
                <div class="absolute -top-2 -left-2 text-indigo-500/20">
                    <i class="fa-solid fa-quote-left text-4xl"></i>
                </div>
                
                <!-- AI Advice Text (Yapay Zeka Tavsiye Metni) -->
                <div class="relative pl-8">
                    <p class="text-white text-base leading-relaxed font-medium mb-4" id="ai-advice-text">
                        @aiAdvice
                    </p>
                </div>

            </div>
        }
    </div>

    <!-- Subtle animated gradient border effect (Hafif animasyonlu gradyan kenarlık efekti) -->
    <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-indigo-500/0 via-purple-500/10 to-pink-500/0 pointer-events-none"></div>
</div>

<style>
    @@keyframes glow {
        0%, 100% { opacity: 0.5; }
        50% { opacity: 1; }
    }
    
    .animate-pulse {
        animation: glow 2s ease-in-out infinite;
    }
</style>
