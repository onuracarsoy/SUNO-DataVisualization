@using System.Globalization
@model DataVisualizationUI.Models.PagedViewModel<DataVisualizationUI.Dtos.OrderListDto>

@{
    ViewData["Title"] = "Sipariş Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- Header Section (Başlık Bölümü) -->
    <div class="mb-8 flex justify-between items-center">
        <div>
             <h1 class="text-3xl font-bold text-white">Siparişler</h1>
             <p class="text-gray-400 mt-1 text-sm">Tüm siparişlerinizi buradan takip edebilirsiniz.</p>
        </div>
        <a href="/Order/CreateOrder" class="bg-primary hover:bg-indigo-600 text-white font-medium py-2 px-4 rounded-lg shadow-lg shadow-indigo-500/30 transition-all flex items-center gap-2">
            <i class="fa-solid fa-plus"></i> <span class="hidden sm:inline">Yeni Sipariş Oluştur</span>
        </a>
    </div>

    <!-- Search Bar (Arama Çubuğu) -->
    <div class="mb-6">
        <form method="get" action="/Order/OrderList" class="flex gap-3">
            <div class="relative flex-1 max-w-md">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                    <i class="fa-solid fa-search"></i>
                </span>
                <input type="text" name="search" value="@ViewBag.Search" 
                       class="w-full bg-dark-800 border border-dark-700 rounded-lg pl-10 pr-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all" 
                       placeholder="Müşteri, ürün veya durum ara..." />
            </div>
            <button type="submit" class="bg-primary hover:bg-indigo-600 text-white font-medium py-2.5 px-5 rounded-lg transition-all flex items-center gap-2">
                <i class="fa-solid fa-search"></i> Ara
            </button>
            @if(!string.IsNullOrEmpty(ViewBag.Search as string))
            {
                <a href="/Order/OrderList" class="bg-dark-700 hover:bg-dark-600 text-gray-300 hover:text-white font-medium py-2.5 px-5 rounded-lg transition-all flex items-center gap-2">
                    <i class="fa-solid fa-times"></i> Temizle
                </a>
            }
        </form>
    </div>

    <!-- Table Section (Tablo Bölümü) -->
    <div class="bg-dark-800 rounded-xl border border-dark-700 shadow-xl overflow-hidden flex flex-col justify-between" style="min-height: 600px;">
        @if (Model.Items is not null && Model.Items.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-dark-900 text-gray-400 uppercase text-xs">
                            <th class="py-4 px-6 font-semibold border-b border-dark-700 w-20">#</th>
                            <th class="py-4 px-6 font-semibold border-b border-dark-700">Müşteri</th>
                            <th class="py-4 px-6 font-semibold border-b border-dark-700">Ürün</th>
                            <th class="py-4 px-6 font-semibold border-b border-dark-700">Tarih</th>
                            <th class="py-4 px-6 font-semibold border-b border-dark-700 text-center">Adet</th>
                            <th class="py-4 px-6 font-semibold border-b border-dark-700 text-right">Tutar</th>
                            <th class="py-4 px-6 font-semibold border-b border-dark-700 text-center">Durum</th>
                            <th class="py-4 px-6 font-semibold border-b border-dark-700 text-right">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-dark-700">
                        @foreach (var item in Model.Items)
                        {
                            <tr class="hover:bg-dark-700/50 transition-colors group">
                                <td class="py-4 px-6 text-gray-500 text-sm font-mono">@item.OrderId</td>
                                <td class="py-4 px-6">
                                     <div class="flex items-center gap-3">
                                         <div class="h-8 w-8 rounded-full bg-dark-700 flex items-center justify-center text-gray-400">
                                            <i class="fa-solid fa-user text-xs"></i>
                                        </div>
                                        <span class="block font-medium text-gray-200 group-hover:text-white transition-colors">
                                            @(string.IsNullOrEmpty(item.CustomerName) ? "Anonim" : item.CustomerName)
                                        </span>
                                    </div>
                                </td>
                                <td class="py-4 px-6">
                                    <span class="text-sm text-gray-300">
                                        @(string.IsNullOrEmpty(item.ProductName) ? "-" : item.ProductName)
                                    </span>
                                </td>
                                <td class="py-4 px-6">
                                    <div class="flex flex-col">
                                        <span class="text-sm text-white">@item.OrderDate.ToString("d MMM yyyy", CultureInfo.GetCultureInfo("tr-TR"))</span>
                                        <span class="text-xs text-gray-500">@item.OrderDate.ToString("HH:mm")</span>
                                    </div>
                                </td>
                                <td class="py-4 px-6 text-center">
                                    <span class="bg-dark-700 text-white text-xs font-bold px-2 py-1 rounded">@item.Quantity</span>
                                </td>
                                <td class="py-4 px-6 text-right font-medium text-white">
                                    @item.TotalPrice.ToString("C", CultureInfo.GetCultureInfo("fr-FR"))
                                </td>
                                <td class="py-4 px-6 text-center">
                                    @if(item.OrderStatus == "Tamamlandı")
                                    {
                                         <span class="px-2 py-1 rounded text-xs font-medium bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                                            Tamamlandı
                                        </span>
                                    }
                                    else if(item.OrderStatus == "Hazırlanıyor" || item.OrderStatus == "Kargoda")
                                    {
                                        <span class="px-2 py-1 rounded text-xs font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20">
                                            @item.OrderStatus
                                        </span>
                                    }
                                    else if(item.OrderStatus == "İptal Edildi")
                                    {
                                        <span class="px-2 py-1 rounded text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/20">
                                            İptal
                                        </span>
                                    }
                                    else
                                    {
                                         <span class="px-2 py-1 rounded text-xs font-medium bg-yellow-500/10 text-yellow-500 border border-yellow-500/20">
                                            @item.OrderStatus
                                        </span>
                                    }
                                </td>
                                <td class="py-4 px-6 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                    <a href="/Order/DetailOrder/@item.OrderId" class="p-2 rounded-lg text-white-400 hover:bg-blue-500/10 hover:text-blue-300 transition-colors" title="Ayrıntılar">
                                        <i class="fa-solid fa-info-circle"></i>
                                    </a>
                                        <a href="/Order/UpdateOrder/@item.OrderId" class="p-2 rounded-lg text-blue-400 hover:bg-blue-500/10 hover:text-blue-300 transition-colors" title="Düzenle">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a href="/Order/DeleteOrder/@item.OrderId" class="p-2 rounded-lg text-red-400 hover:bg-red-500/10 hover:text-red-300 transition-colors" title="Sil">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination Controls (Sayfalama Kontrolleri) -->
            <div class="px-6 py-4 border-t border-dark-700 flex items-center justify-between bg-dark-900/50">
                @{
                    var searchQuery = !string.IsNullOrEmpty(ViewBag.Search as string) ? $"&search={ViewBag.Search}" : "";
                }
                <div class="text-sm text-gray-500">
                    Toplam <span class="font-medium text-white">@Model.TotalItems</span> kayıttan <span class="font-medium text-white">@((Model.PageNumber - 1) * Model.PageSize + 1)</span> - <span class="font-medium text-white">@(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems))</span> arası gösteriliyor.
                </div>
                <div class="flex items-center gap-2">
                    
                    <!-- First Page (İlk Sayfa) -->
                    @if (Model.PageNumber > 1)
                    {
                        <a href="/Order/OrderList?page=1@searchQuery" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium" title="İlk Sayfa">
                            <i class="fa-solid fa-angles-left"></i>
                        </a>
                    }
                    else
                    {
                         <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                            <i class="fa-solid fa-angles-left"></i>
                        </span>
                    }

                    <!-- Previous (Önceki) -->
                    @if (Model.HasPreviousPage)
                    {
                        <a href="/Order/OrderList?page=@(Model.PageNumber - 1)@searchQuery" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium">
                            <i class="fa-solid fa-chevron-left"></i>
                        </a>
                    }
                    else
                    {
                         <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                            <i class="fa-solid fa-chevron-left"></i>
                        </span>
                    }

                    <!-- Page Numbers (Sayfa Numaraları) -->
                    <div class="flex items-center gap-1 mx-2">
                        @{
                            int startPage = Math.Max(1, Model.PageNumber - 2);
                            int endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);

                            if (startPage > 1)
                            {
                                <a href="/Order/OrderList?page=1@searchQuery" class="w-8 h-8 flex items-center justify-center rounded-lg bg-dark-700 text-gray-400 hover:bg-dark-600 hover:text-white transition-colors text-sm">1</a>
                                if (startPage > 2)
                                {
                                    <span class="w-8 h-8 flex items-center justify-center text-gray-500">...</span>
                                }
                            }

                            for (int i = startPage; i <= endPage; i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <span class="w-8 h-8 flex items-center justify-center rounded-lg bg-primary text-white text-sm font-bold">@i</span>
                                }
                                else
                                {
                                    <a href="/Order/OrderList?page=@i@searchQuery" class="w-8 h-8 flex items-center justify-center rounded-lg bg-dark-700 text-gray-400 hover:bg-dark-600 hover:text-white transition-colors text-sm">@i</a>
                                }
                            }

                            if (endPage < Model.TotalPages)
                            {
                                if (endPage < Model.TotalPages - 1)
                                {
                                    <span class="w-8 h-8 flex items-center justify-center text-gray-500">...</span>
                                }
                                <a href="/Order/OrderList?page=@Model.TotalPages@searchQuery" class="w-8 h-8 flex items-center justify-center rounded-lg bg-dark-700 text-gray-400 hover:bg-dark-600 hover:text-white transition-colors text-sm">@Model.TotalPages</a>
                            }
                        }
                    </div>

                    <!-- Next (Sonraki) -->
                    @if (Model.HasNextPage)
                    {
                        <a href="/Order/OrderList?page=@(Model.PageNumber + 1)@searchQuery" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium">
                            <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    }
                    else
                    {
                         <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                            <i class="fa-solid fa-chevron-right"></i>
                        </span>
                    }

                    <!-- Last Page (Son Sayfa) -->
                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <a href="/Order/OrderList?page=@Model.TotalPages@searchQuery" class="px-3 py-2 rounded-lg bg-dark-700 text-gray-300 hover:bg-dark-600 hover:text-white transition-colors text-sm font-medium" title="Son Sayfa">
                            <i class="fa-solid fa-angles-right"></i>
                        </a>
                    }
                    else
                    {
                         <span class="px-3 py-2 rounded-lg bg-dark-800 text-gray-600 text-sm font-medium cursor-not-allowed">
                            <i class="fa-solid fa-angles-right"></i>
                        </span>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <div class="bg-dark-700/50 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-cart-shopping text-2xl text-gray-500"></i>
                </div>
                <h3 class="text-lg font-medium text-white">Hiç sipariş bulunamadı</h3>
                <p class="text-gray-500 mt-1 text-sm">Sisteme yeni bir sipariş girişi yapın.</p>
            </div>
        }
    </div>

